<script>
function goBack() {
    window.history.back().back();
}
function XSS(element){
    element.value=filterXSS(element.value);
}
</script>

<h1 id="the-heading">Edit your account!</h1>
<div class = "row">
  <div class = "col-sm-12">
    <form id = "static-form" ref='uploadForm' 
     id='uploadForm' 
     action='http://localhost:3000/hannibal/user/private/{{user_id}}' 
     method='post' 
     encType="multipart/form-data">

      
      <div class = "form-group">
        <label for="user_pass">Please type password: </label><br>
        <input type="password" name="user_pass" id="user_pass" placeholder="Password" required onchange="XSS(this)"><br><br>
      </div>
      
      <div class = "form-group">
        <label for="contact_email">Please type email: </label><br>
        <input type="text" name="contact_email" id="contact_email" placeholder="Email" required onchange="XSS(this)"><br><br>
      </div>
    <button type='"submit"' id="private" name="private" class="btn btn-success" >Edit</button><button type="button" class="btn btn-danger" onclick="goBack()">Back</button>

    <input type="hidden" id="user_id" value={{user_id}}>
    </form>
  </div>
</div> 
