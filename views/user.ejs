<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Profile</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/user/<%= id %>" method="POST">
                <div>
                    <div class="form-section">
                        <h2 style="text-align: left">Username :
                            <%= currentUser.username %>
                        </h2>
                        <h2 style="text-align: left">Email :
                            <%= currentUser.email %>
                        </h2>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="email">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Change email</button>
                    </div>
                </div>
            </form>
            <form action="/user/reset/<%= id %>" method="PUT">
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Change password</button>
                </div>
            </form>

        </div>
    </div>

</div>

<% include ./partials/footer %>